@model User

<h1>Redigera profilen:</h1>

<div class="border border-dark">
<form asp-action="UpdateUser" method="post">
    <label>Förnamn: </label>
    <input name="userFirstname" asp-for="Firstname" />
    <br />
    <label>Efternamn: </label>
    <input name="userLastname" asp-for="Lastname" />
    <br />
    <label>Födelsedatum: </label>
    <input name="userBirthDay" type="date" asp-for="BirthDay" />
    <br />
    <label>Privat/Offentlig: </label>
    <select name="userPrivacy" asp-for="PublicSetting">
        <option value="true">Offentlig</option>
        <option value="false">Privat</option>
    </select>
    <br />
    <button type="submit">Spara</button>
</form>
</div>
