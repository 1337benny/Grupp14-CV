<h1>Mitt CV: </h1>
@if (Model.CVID == null || string.IsNullOrEmpty(Model.CVID.ToString())){
    <div class="border border-dark">
        <form asp-action="CreateCV" method="post">
            <label>Titel: </label>
            <input name="cvHeader" @* asp-for="Header" *@ />
            <br />
            <label>Om mig: </label>
            <input name="cvContent" @* asp-for="Content" *@ />
            <br />
            <label>Kompetenser: </label>
            <input name="cvCompetence" @* asp-for="Competence" *@ />
            <br />
            <label>Utbildning: </label>
            <input name="cvEducation" @* asp-for="Education" *@ />
            <br />
            <label>Tidigare erfarenhet: </label>
            <input name="cvPreviousExperience" @* asp-for="PreviousExperience" *@ />
            <br />
            <button type="submit">Spara</button>
        </form>
    </div>
} else{
    <div class="border border-dark">
        <form asp-action="UpdateCV" method="post">
            <label>Titel: </label>
            <input name="cvHeader" asp-for="CV.Header" />
            <br />
            <label>Om mig: </label>
            <input name="cvContent" asp-for="CV.Content" />
            <br />
            <label>Kompetenser: </label>
            <input name="cvCompetence" asp-for="CV.Competence" />
            <br />
            <label>Utbildning: </label>
            <input name="cvEducation" asp-for="CV.Education" />
            <br />
            <label>Tidigare erfarenhet: </label>
            <input name="cvPreviousExperience" asp-for="CV.PreviousExperience" />
            <br />
            <input type="hidden" name="cvID" value="@Model.CVID" />
            <br />
            <button type="submit">Spara</button>
        </form>
    </div>
}
<h1>Mina projekt:</h1>
<div class="border border-dark">
@foreach(var uip in Model.UsersInProject)
{
            <label>Titel: </label>
            <a class="link-id" asp-controller="Project" asp-action="ProjectInfo" asp-route-projectID="@uip.ProjectID">@uip.Project.Titel</a>
        @if (Model.Id == uip.Project.CreatorID)
        {
            <label>Skapare</label>
        }
        else
        {
            <label>Deltagare</label>
        }

                <br />
}
</div>
<h1>Ändra lösenord:</h1>

<div class="border border-dark">
    <form asp-action="UpdateUserPassword" method="post">
        <label>Gammalt lösenord: </label>
        <input type="password" name="oldPassword" />
        <br />
        <label>Nytt lösenord: </label>
        <input type="password" name="newPassword" />
        <br />
        <label>Upprepa nytt lösenord: </label>
        <input type="password" name="confirmPassword" />
        <br />
       
        <button type="submit">Spara</button>
    </form>
</div>

