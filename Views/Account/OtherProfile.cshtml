@model User


<div class="d-md-flex align-items-start">
    
    <div class="d-flex flex-column align-items-center me-4">
        <img style="width: 300px; height: 300px; object-fit: cover; border-radius: 50%;"
             src="@Model.ProfilePicturePath"
             alt="Profile picture" />
        <div class="mt-3">
            <a asp-controller="Message" asp-action="NewMessage">
                <button class="btn btn-primary">Skicka ett meddelande</button>
            </a>
        </div>
    </div>

    
    <div>
        <h1>@Model.Firstname @Model.Lastname</h1>
        
        <p>
            <span style="font-weight:500">Ålder:</span>
            <span id="age"></span>
        </p>
        <p style="display:none;" id="birth-year">@Model.BirthDay</p>
        @if (Model.PublicSetting == true)
        {
            <p>
                <span style="font-weight:500">Åtkomst: </span><span>
                    Offentlig
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-unlock" viewBox="0 0 16 16">
                        <path d="M11 1a2 2 0 0 0-2 2v4a2 2 0 1 2-2-2h5V3a3 3 0 0 1 6 0v4a.5.5 0 0 1-1 0V3a2 2 0 0 0-2-2M3 8a1 1 0 0 0-1 1v5a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V9a1 1 0 0 0-1-1z" />
                    </svg>
                </span>
            </p>
        }
        else
        {
            <p>
                <span style="font-weight:500">Åtkomst: </span><span>
                    Privat
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-lock" viewBox="0 0 16 16">
                        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2M5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1" />
                    </svg>
                </span>
            </p>
        }
        <p><span style="font-weight:500">Epost: </span> @Model.UserName</p>
    </div>
</div>



<h2 class="text-center" style="margin-top: 20px;">CV</h2>
@if (Model.CVID != null)
{
    <div class="border border-dark ms-3 mx-3" style="padding: 1rem;">
        <p><span style="font-weight:500">Titel: </span> @Model.CV.Header</p>
        <p><span style="font-weight:500">Innehåll: </span> @Model.CV.Content</p>
        <p><span style="font-weight:500">Utbildning: </span> @Model.CV.Education</p>
        <p><span style="font-weight:500">Kompetenser: </span> @Model.CV.Competence</p>
        <p><span style="font-weight:500">Tidigare erfarenheter: </span> @Model.CV.PreviousExperience</p>

    </div>
}
else
{
    <p class="text-center">Användaren har inget CV.</p>
}

<h2 class="text-center" style="margin-top: 20px;">Projekt</h2>

@if (Model.UsersInProject != null)
{
    if (Model.UsersInProject.FirstOrDefault() == null)
    {
        <p class="text-center">Användaren är inte med i något projekt.</p>
    }
    foreach (Users_In_Project uip in Model.UsersInProject)
    {

        <div class="border border-dark ms-3 mx-3" style="padding: 1rem;">
            <p><span style="font-weight:500">Titel: </span> @uip.Project.Titel</p>
            <p><span style="font-weight:500">Beskrivning: </span> @uip.Project.Description</p>
        </div>
    }

}