@model RegisterViewModel
@{
    ViewBag.Titel = "Registrera en ny användare";
}

<h1>Registrera</h1>
<div asp-validation-summary="All" class="text-danger"></div>
<form class="mx-auto text-end" method="post" asp-action="Register">
    
    <div class="form-group row mb-3">
        <div class="col-sm-2">
            <label>Epost: </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Epost" class="form-control" />
        </div>
    </div>
    <div class="form-group row mb-3">
        <div class="col-sm-2">
            <label>Lösenord: </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Losenord" class="form-control" />
        </div>
    </div>
    <div class="form-group row mb-3">
        <div class="col-sm-2">
            <label>Bekräfta lösenord: </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="BekraftaLosenord" class="form-control" />
        </div>
    </div>
    <div class="form-group row mb-3">
        <div class="col-sm-2">
            <label>Förnamn: </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Fornamn" class="form-control" />
        </div>
    </div>
    <div class="form-group row mb-3">
        <div class="col-sm-2">
            <label>Efternamn: </label>
        </div>
        <div class="col-sm-4">
            <input asp-for="Efternamn" class="form-control" />
        </div>
    </div>
    <div class="form-group row mb-3">
        <div class="col-sm-2">
            <label>Födelsedatum: </label>
        </div>
        <div class="col-sm-4">
            <input type="date" asp-for="FodelseDatum" class="form-control" />
        </div>
    </div>
    <div class="form-group row p-5">
        <div class="offset-2 col-sm-4">
            <button type="submit" class="btn btn-primary">Registrera</button>
            <p class="mt-3">Har du redan ett konto? <a asp-action="LogIn">Logga in</a></p>
        </div>
    </div>
    
</form>



