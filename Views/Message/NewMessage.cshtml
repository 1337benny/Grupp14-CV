<h1>Nytt meddelande</h1>

@if (User.Identity.IsAuthenticated)
{
    <form asp-action="SendNewMessage" method="post">
        <label>Mottagare</label>
        <div>
            <input type="search"
                   name="search"
                   id="searchInput"
                   placeholder="Sök användare..."
                   oninput="searchUsers()" />
            <div id="searchResults">
            </div>
            <br />
            <label>Meddelande</label>
            <br />
            <input type="text" style="height:300px; width:70%" name="content" value="" />
            <br />
            <button type="submit">Skicka</button>
    </form>
}
else
{
    <form asp-controller="Account" asp-action="SendNewMessageNoUser" method="post">
        <label>Mottagare</label>
        <div>
            <input type="search"
                   name="search"
                   id="searchInput"
                   placeholder="Sök användare..."
                   oninput="searchUsers()" />
            <div id="searchResults">
            </div>
            <br />
            <label>Ditt förnamn:</label>
            <br />
            <input type="text" name="firstName" value="" />
            <br />
            <label>Ditt efternamn:</label>
            <br />
            <input type="text" name="lastName" value="" />
            <br />
            <label>Meddelande</label>
            <br />
            <input type="text" style="height:300px; width:70%" name="content" value="" />
            <br />
            <button type="submit">Skicka</button>
    </form>
}





